{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "es2018",
        "lib": ["ESNext"],
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "downlevelIteration": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "baseUrl": "./src"
    },
    "include": ["src/**/*"]
}
